[
  {
    "name": "Проверка страницы формы",
    "steps": [
      {
        "action": "navigate",
        "url": "{domain}/feedback/"
      }
    ],
    "assertions": [
      {
        "type": "url",
        "expectedUrl": "{domain}/feedback/"
      },
      {
        "type": "visibility",
        "selector": "[data-testid=\"name-input\"]"
      },
      {
        "type": "visibility",
        "selector": "[data-testid=\"phone-input\"]"
      }
    ]
  },
  {
    "name": "Успешная отправка формы",
    "steps": [
      {
        "action": "navigate",
        "url": "{domain}/feedback/"
      },
      {
        "action": "fill",
        "selector": "[data-testid=\"name-input\"]",
        "value": "Тест"
      },
      {
        "action": "fill",
        "selector": "[data-testid=\"phone-input\"]",
        "value": "+79123456789"
      },
      {
        "action": "click",
        "selector": "[data-testid=\"submit-btn\"]"
      },
      {
        "action": "waitForRequests",
        "timeout": 5000
      }
    ],
    "assertions": [
      {
        "type": "visibility",
        "selector": "[data-testid=\"success-msg\"]"
      },
      {
        "type": "text",
        "selector": "[data-testid=\"success-msg\"]",
        "expectedText": "Спасибо за заявку!"
      }
    ]
  }
]